{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.production",
    "buildCommand": "npm run railway:build"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm run railway:start",
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 15,
    "healthcheckInterval": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5,
    "sleepApplication": false,
    "cronJobs": [
      {
        "name": "health-monitoring",
        "schedule": "*/5 * * * *",
        "command": "node scripts/production-monitoring.js"
      },
      {
        "name": "backup-cleanup",
        "schedule": "0 2 * * *",
        "command": "node scripts/railway-rollback.js cleanupOldBackups"
      }
    ]
  },
  "environments": {
    "production": {
      "build": {
        "dockerfilePath": "Dockerfile.production",
        "buildCommand": "NODE_ENV=production npm run railway:build"
      },
      "deploy": {
        "numReplicas": 2,
        "healthcheckTimeout": 20,
        "restartPolicyMaxRetries": 3,
        "variables": {
          "NODE_ENV": "production",
          "RAILWAY_ENVIRONMENT": "production",
          "NODE_OPTIONS": "--max-old-space-size=4096"
        }
      }
    },
    "staging": {
      "build": {
        "dockerfilePath": "Dockerfile.production",
        "buildCommand": "NODE_ENV=staging npm run railway:build"
      },
      "deploy": {
        "numReplicas": 1,
        "healthcheckTimeout": 15,
        "restartPolicyMaxRetries": 5,
        "variables": {
          "NODE_ENV": "staging",
          "RAILWAY_ENVIRONMENT": "staging"
        }
      }
    }
  },
  "regions": ["us-west1"],
  "plugins": [
    {
      "name": "postgresql",
      "plan": "hobby"
    }
  ]
}