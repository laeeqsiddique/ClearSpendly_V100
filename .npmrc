# Production NPM configuration for reliable installations
# Optimized for Railway deployments

# Registry configuration
registry=https://registry.npmjs.org/
strict-ssl=true

# Timeout and retry configuration
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
fetch-retries=5
fetch-timeout=300000
cache-min=3600

# Performance optimizations
prefer-offline=true
audit=false
fund=false
update-notifier=false

# Installation behavior
legacy-peer-deps=true
force=false
save-exact=true

# Logging for debugging
loglevel=verbose

# Network configuration
maxsockets=10
network-timeout=300000

# Cache configuration
cache=/tmp/.npm
tmp=/tmp

# Engine strict mode
engine-strict=false

# Package lock
package-lock=true
shrinkwrap=false

# Scripts execution
ignore-scripts=false
script-shell=sh

# Progress bar (disable for CI)
progress=false

# Color output (disable for CI)
color=false