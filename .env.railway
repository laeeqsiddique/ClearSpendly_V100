# Railway Environment Configuration Template
# Copy this file and rename it to .env.production for production deployment
# Fill in the actual values for your Railway deployment

# Database Configuration (Supabase)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_PROJECT_REF=your_project_ref
DATABASE_URL=your_database_connection_string

# Authentication (Polar.sh)
POLAR_CLIENT_ID=your_polar_client_id
POLAR_CLIENT_SECRET=your_polar_client_secret
POLAR_WEBHOOK_SECRET=your_polar_webhook_secret

# AI/OCR Services
OPENAI_API_KEY=your_openai_api_key

# File Upload (UploadThing)
UPLOADTHING_SECRET=your_uploadthing_secret
UPLOADTHING_APP_ID=your_uploadthing_app_id

# Analytics
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Application URLs
NEXT_PUBLIC_APP_URL=https://your-railway-app.railway.app
NEXTAUTH_URL=https://your-railway-app.railway.app

# Railway-specific optimizations
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
CI=true
PORT=3000

# Security
NEXTAUTH_SECRET=your_nextauth_secret_min_32_chars

# Email (Resend)
RESEND_API_KEY=your_resend_api_key

# Optional: AWS S3 for file storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name