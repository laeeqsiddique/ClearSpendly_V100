# Staging Environment Configuration for ClearSpendly
NODE_ENV=staging

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-staging-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_staging_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_staging_service_role_key

# AI-Enhanced OCR Configuration
NEXT_PUBLIC_OPENAI_API_KEY=your_staging_openai_api_key
NEXT_PUBLIC_AI_MODEL=gpt-4o-mini
NEXT_PUBLIC_ENABLE_AI_ENHANCEMENT=true
NEXT_PUBLIC_AI_CONFIDENCE_THRESHOLD=85

# Alternative AI Configuration (Ollama for staging)
ENABLE_AI_OCR_ENHANCEMENT=true
LLM_PROVIDER=ollama
LLM_MODEL=llama3.2:3b
LLM_API_URL=http://staging-ollama.internal:11434
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000
LLM_TIMEOUT_MS=120000

# Database Configuration
DATABASE_URL=postgresql://postgres:your_staging_password@your-staging-db.supabase.co:5432/postgres

# External Services (Staging)
RESEND_API_KEY=your_staging_resend_key
STRIPE_SECRET_KEY=sk_test_staging_key
STRIPE_WEBHOOK_SECRET=whsec_staging_webhook_secret

# Storage Configuration
AWS_ACCESS_KEY_ID=your_staging_aws_access_key
AWS_SECRET_ACCESS_KEY=your_staging_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=clearspendly-staging-uploads

# OAuth Configuration (Staging)
GOOGLE_CLIENT_ID=your_staging_google_client_id
GOOGLE_CLIENT_SECRET=your_staging_google_client_secret
AZURE_CLIENT_ID=your_staging_azure_client_id
AZURE_CLIENT_SECRET=your_staging_azure_client_secret

# Monitoring and Analytics
NEXT_PUBLIC_POSTHOG_KEY=your_staging_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Application Configuration
NEXT_PUBLIC_APP_URL=https://staging.clearspendly.com
NEXT_PUBLIC_API_URL=https://staging.clearspendly.com/api

# Feature Flags
NEXT_PUBLIC_FEATURE_AI_OCR=true
NEXT_PUBLIC_FEATURE_MULTI_TENANT=true
NEXT_PUBLIC_FEATURE_ANALYTICS=true
NEXT_PUBLIC_FEATURE_INVOICE_GENERATION=true

# Security Configuration
NEXTAUTH_URL=https://staging.clearspendly.com
NEXTAUTH_SECRET=your_staging_nextauth_secret

# Rate Limiting (More relaxed for staging)
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=2000

# Logging
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true

# Backup Configuration
BACKUP_RETENTION_DAYS=7
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM