# Simple Dockerfile for debugging
FROM node:20-alpine

WORKDIR /app

# Install dependencies
RUN apk add --no-cache libc6-compat python3 make g++

# Copy everything
COPY . .

# Install dependencies
RUN npm ci

# Build with verbose output
ENV NEXT_TELEMETRY_DISABLED=1
RUN npm run build --verbose

EXPOSE 3000
CMD ["npm", "start"]